{% extends defaultRigLayout or "layouts/default.html" %}

{% set title = "Clear session data?" %}

{% block content %}
  <form method="post">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-two-thirds">
        {{ govukNotificationBanner({
          html: 'Session data has been cleared. <a class="govuk-notification-banner__link" href="/">Return to prototype homepage</a>.',
          type: "success"
        }) if success }}

        <h1 class="nhsuk-heading-l">{{ title }}</h1>

        {{ warningCallout({
          heading: "Clearing the session",
          HTML: "<p>This will clear all of the data entered in this session</p>"
        }) }}

        {{ button({
          text: "Clear the data"
        }) }}
      </div>
    </div>
  </form>
{% endblock %}
